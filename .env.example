APP_ENV=SIT
APP_NAME=stock_market_ai_assistant
APP_DEBUG=false
APP_HOST=0.0.0.0
APP_PORT=8004
# If DATABASE_URL is unset, app falls back to SQLite at SQLITE_DB_PATH.
# DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/postgres
SQLITE_DB_PATH=./app.db
DB_SCHEMA=stock_ai_lab

# Optional explicit env-specific overrides:
# SIT_DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/postgres
# UAT_DATABASE_URL=postgresql+psycopg2://<user>:<password>@<host>:5432/<db>
# SIT_DB_SCHEMA=stock_ai_lab
# UAT_DB_SCHEMA=stock_ai_lab

INTRADAY_DAILY_BUDGET_INR=100
INTRADAY_MAX_OPEN_POSITIONS=1

SWING_ALLOCATION_INR=1000
SWING_MAX_OPEN_POSITIONS=2
SWING_DEFAULT_HORIZON_DAYS=20
MAX_STOCKS_PER_MODE=10

AUDIT_TOP_STOCKS_LIMIT=100
AUDIT_RETENTION_DAYS=15
AUDIT_CLEANUP_INTERVAL_MINUTES=360
AUDIT_CLEANUP_SCHEDULER_ENABLED=true
AUDIT_UNIVERSE_CSV_URL=https://www.niftyindices.com/IndexConstituent/ind_nifty100list.csv
AUDIT_UNIVERSE_TIMEOUT_SECONDS=20
